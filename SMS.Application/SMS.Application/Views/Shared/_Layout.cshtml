@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemiPerMenaxhiminEVijueshmerise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-5.15.1-web/css/all.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous" asp-append-version="true">*@
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/3.2.0/css/bootstrap-colorpicker.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <div class="navigation-wrap bg-light start-header start-style">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="navbar navbar-expand-md navbar-light">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <a class="" href="/Home/Index">
                                <div class="logo-image">
                                    <img src="~/ubtlogo.png" class="img-fluid" style="width: 50px;height: 50px;">
                                </div>
                            </a>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav ml-auto py-4 py-md-0" id="navigation">
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                        <a class="nav-link " asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                        <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Classes</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="" asp-action="">Add new class</a>
                                            <a class="dropdown-item" asp-controller="" asp-action="">Evaluations</a>
                                            <a class="dropdown-item" asp-controller="" asp-action="">Show all</a>
                                        </div>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                        <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Subjects</a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="Subjects" asp-action="NewSubject">Add new subject</a>
                                            <a class="dropdown-item" asp-controller="Subjects" asp-action="ShowAllSubjects">Show all</a>
                                        </div>
                                    </li>
                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                        <a class="nav-link" asp-controller="" asp-action="">Students</a>
                                    </li>

                                    <li class="nav-item pl-4 pl-md-0 ml-0 ml-md-4">
                                        <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-lg"> <i class="fas fa-chevron-down fa-xs"></i></i></a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="" asp-action="">Edit Profile</a>
                                            <a class="dropdown-item" asp-controller="" asp-action="">Change password</a>
                                            <a class="dropdown-item" asp-controller="" asp-action="">Log Out</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container" style="margin-top:100px;margin-bottom:60px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="footer1">
        <div class="container text-center">
            &copy; 2020
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" asp-append-version="true"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/3.2.0/js/bootstrap-colorpicker.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Component.InvokeAsync("NToastNotify")
    @RenderSection("Scripts", required: false)

</body>
</html>
