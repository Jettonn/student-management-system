@model SMS.Application.ViewModels.Students.NewStudent
@using SMS.Application.Enum
@{
    ViewData["Title"] = "NewStudent";
}

<div class="container">
    <div class="col-md-12 pl-0">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-muted">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Students" asp-action="StudentsList" class="text-muted">Students</a></li>
            <li class="breadcrumb-item active" aria-current="page">New student</li>
        </ul>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">

                <div class="col-md-12 margin_left15px">
                    <h4 class="text-maincolor">New student</h4>
                </div>
                <form method="post" asp-controller="Students" asp-action="NewStudent" class="formWidth_100">
                    <div class="col-md-12 pt-2">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="control-label" for="firstname">First name<span class="required">*</span></label>
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" class="form-control" id="firstname" placeholder="Enter first name" asp-for="Firstname" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="control-label" for="lastname">Last name<span class="required">*</span></label>
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" class="form-control" id="lastname" placeholder="Enter last name" asp-for="Lastname" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="control-label" for="gender">Gender<span class="required">*</span></label>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-5" style="padding-left:20px;">
                                                    <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="@((int)Gender.Male)" checked>
                                                    <label class="form-check-label" for="male">
                                                        M
                                                    </label>
                                                </div>
                                                <div class="col-md-5" style="padding-left:20px;">
                                                    <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="@((int)Gender.Female)">
                                                    <label class="form-check-label" for="female">
                                                        F
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="control-label" for="email">Email<span class="required">*</span></label>
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="email" class="form-control" id="email" placeholder="Enter student email" asp-for="Email" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <label class="control-label" for="yearOfStudies">Year of studies<span class="required">*</span></label>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="col-md-12">
                                            <div class="row">
                                                <select class="browser-default custom-select" asp-items="Html.GetEnumSelectList<YearOfStudies>()" asp-for="YearOfStudies" required>
                                                    <option selected="" value="-1">Please select one</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 margin_left15px">
                        <button type="submit" class="btn btn-outline-dark">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
